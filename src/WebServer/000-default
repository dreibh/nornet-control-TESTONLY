# NameVirtualHost *:80

<VirtualHost *:80>
	ServerName nntb.no
	ServerAlias www.nntb.no
	Redirect permanent / https://www.nntb.no/
</VirtualHost>

<VirtualHost *:443>
	ServerName nntb.no
	ServerAlias www.nntb.no

	SSLEngine on
	SSLOptions +StrictRequire
	SSLProtocol all -SSLv2 -SSLv3 +TLSv1
	SSLHonorCipherOrder on
	SSLCipherSuite ECDHE-ECDSA-AES256-GCM-SHA384:ECDH-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDH-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-SHA384:ECDH-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA384:ECDH-RSA-AES256-SHA384:DHE-RSA-AES256-GCM-SHA384:DHE-DSS-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-SHA:ECDH-ECDSA-AES256-SHA:ECDHE-RSA-AES256-SHA:ECDH-RSA-AES256-SHA:DHE-RSA-AES256-SHA:DHE-DSS-AES256-SHA:AES256-SHA

	SSLCertificateFile /etc/ssl/nntb-signed.crt
	SSLCertificateKeyFile /etc/ssl/nntb.key
	SSLCertificateChainFile	/etc/ssl/sub.class1.server.ca.pem

	DocumentRoot /var/www

	<Directory />
	        SSLRequireSSL
		Options FollowSymLinks Indexes MultiViews
		AllowOverride None
	</Directory>

	<Directory /var/www/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>

	ScriptAlias /cgi-bin/ /usr/lib/cgi-bin/
	<Directory "/usr/lib/cgi-bin">
		AllowOverride None
		Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
		Order allow,deny
		Allow from all
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel warn

	CustomLog ${APACHE_LOG_DIR}/access.log combined

	# AWStats
	Alias /awstatsclasses "/usr/share/awstats/lib/"
	Alias /awstats-icon "/usr/share/awstats/icon/"
	Alias /awstatscss "/usr/share/doc/awstats/examples/css"
	ScriptAlias /awstats/ /usr/lib/cgi-bin/
	<Location /awstats/>
		AuthType Basic
		AuthName "AWStats Access Control"
		AuthUserFile /etc/apache2/htpasswd
		Require valid-user
	</Location>

</VirtualHost>
