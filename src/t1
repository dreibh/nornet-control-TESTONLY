#!/usr/bin/python
# -*- coding: utf-8 -*-

from NorNetTools         import *;
from NorNetConfiguration import *;



# ###### Get hostname from FQDN #############################################
def getHostnameFromFQDN(fqdn):
   match = re.search('^([^\.]*)\.(.*)', fqdn)
   if match != None:
      return match.group(1)
   else:
      return fqdn


# ###### Get hostname from FQDN #############################################
def getDomainFromFQDN(fqdn):
   match = re.search('^([^\.]*)\.(.*)', fqdn)
   if match != None:
      return match.group(2)
   else:
      return ''


for fqdn in [ "åklungen.alpha.test", "test.alpha.test", "system.alpha.test", "rekesmørbrød.alpha.test", "kölsch.alpha.test" ]:
   print getHostnameFromFQDN(fqdn), "\t", getDomainFromFQDN(fqdn)
