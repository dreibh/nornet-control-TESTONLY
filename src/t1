#!/usr/bin/python
# -*- coding: utf-8 -*-

import re;


s = u'MÃ¼ller, John: xy@example.com'

found = re.match(r'(.*): ([a-zA-Z0-9\.]+@[a-zA-Z0-9\.]+)', s)
print found
if found:
   contactMail       = found.group(2)
   contactFullName   = found.group(1)
   contactFamilyName = ''
   contactGivenName  = ''

   found = re.match(r'(.*), (.*)', contactFullName)
   if found:
      contactFamilyName = found.group(1)
      contactGivenName  = found.group(2)
   else:
      contactGivenName  = found.group(2)



   print contactFamilyName, contactGivenName, contactMail
