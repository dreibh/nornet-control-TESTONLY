#!/bin/bash

SITES="10.1.1.1 10.1.2.1 10.1.3.1 10.1.4.1 10.1.5.1 10.1.6.1 10.1.7.1 10.1.8.1 10.1.9.1 10.1.10.1 10.1.11.1 10.20.30.1 10.30.40.1 10.30.41.1 10.30.42.1 10.30.42.1 10.80.88.1 10.90.100.1 10.70.160.1 10.150.200.1"

i=1
for site in $SITES ; do
   name=`printf "tbox%02d" $i`
   ( echo "#!/bin/sh"
     echo "echo \"Connecting to $site ...\""
     echo "ssh -C nornetpp@$site" ) >$name
   chmod +x $name
   let i=$i+1
done
