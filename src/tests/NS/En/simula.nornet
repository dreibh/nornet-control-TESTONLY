;
; BIND data file for local loopback interface
;

$TTL	604800

@	IN	SOA	simula.nornet. root.simula.nornet. (
			      2		; Serial
			   360		; Refresh
			    60		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL

@	IN	NS	tunnelbox.simula.nornet.
@	IN 	MX	10 tunnelbox.simula.nornet.


tunnelbox	IN	A	10.1.1.1
tunnelbox	IN	AAAA	fd01::1
tunnelbox	IN 	HINFO   "The Tunnelbox at Simula" "Linux"
tunnelbox	IN	LOC	60 1 2 N 10 1 1 E 5m 25m

node2	IN A	10.1.1.2
node3	IN A	10.1.1.3
node4	IN A	10.1.1.4
node5	IN A	10.1.1.5
node6	IN A	10.1.1.6
node7	IN A	10.1.1.7
node8	IN A	10.1.1.8

node2	IN	AAAA	fd01::2
node3	IN	AAAA	fd01::3
node4	IN	AAAA	fd01::4
node5	IN	AAAA	fd01::5
node6	IN	AAAA	fd01::6
node7	IN	AAAA	fd01::7
node8	IN	AAAA	fd01::8


www	IN	CNAME	tunnelbox.simula.nornet.
ntp	IN	CNAME	tunnelbox.simula.nornet.
ns1	IN	CNAME	tunnelbox.simula.nornet.
