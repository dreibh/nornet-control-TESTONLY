# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback


# ====== Uninett Interface ================================================
auto eth0
iface eth0 inet static
   address 132.252.156.72
   netmask 255.255.255.0
   gateway 132.252.156.1
   dns-nameservers 8.8.8.8 8.8.4.4

iface eth0 inet6 static
   address fd55:5555::72
   netmask 64
   gateway fd55:5555::1
   # NOTE: NorNet configuration is here, since it requires IPv4 *and* IPv6!
   up   service nornet-tunnelbox start -providers uninett
   down service nornet-tunnelbox stop  -providers uninett


# ====== Telenor Interface ================================================
auto eth0:1
iface eth0:1 inet static
   address 169.254.100.72
   netmask 255.255.255.0
   up   service nornet-tunnelbox start -providers telenor
   down service nornet-tunnelbox stop  -providers telenor


# ====== DFN Interface ====================================================
auto eth0:2
iface eth0:2 inet static
   address 172.31.255.72
   netmask 255.255.255.0
   up   service nornet-tunnelbox start -providers dfn
   down service nornet-tunnelbox stop  -providers dfn
