#!/bin/sh
#
# This script will be executed *after* all the other init scripts.
# You can put your own initialization stuff in here if you don't
# want to do the full Sys V style init stuff.

touch /var/lock/subsys/local

# Enable forwarding (for gws only)

iptables -t nat -A POSTROUTING -o eth5 -j SNAT --to-source 128.39.36.130
sysctl net.ipv4.ip_forward=1

ip -6 addr add fd55:5555::1/64 dev eth3 || true
ip addr add 169.254.100.1/24 dev eth3 || true
ip addr add 172.31.255.1/24  dev eth3 || true
ip addr add 132.252.156.1/24 dev eth3 || true
ip route add 10.0.0.0/8     via 132.252.156.70 || true
ip route add 192.168.0.0/16 via 132.252.156.70 || true
