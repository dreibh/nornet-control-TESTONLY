#!/bin/bash -e

. ./accounts.conf

ACCOUNTS="accounts.txt"

#ORGANISATION="Alpha Site"
#DOMAIN="alpha.test"
#SLICE="as_tutorial"

ORGANISATION="Simula Research Laboratory"
DOMAIN="simula.nornet"
SLICE="srl_tutorial"

SLICEDESC="This is a test slice for the NorNet tutorial session."
SLICEURL="https://www.nntb.no"

action=""
if [ "$1" = "add" ] ; then
   action="add"
elif [ "$1" = "remove" ] ; then
   action="remove"
else
   echo >&2 "Usage: $0 add|remove"
   exit 1
fi


userArgs=""
IFS=$'\t'
(
   while read number uname passwd gname fname a b c d e f ; do
      if [[ "$number"  =~ ^[0-9]+$ ]] ; then
         keyName="$uname.pub"
         uname="$uname@$DOMAIN"

         if [ "$action" = "add" ] ; then
            echo -e "\x1b[34mAdding $uname ($gname $fname) ...\x1b[0m"
            publicKeyArg=""
            if [ -e "$keyName" ] ; then
               publicKeyArg="--publickey=`cat $keyName`"
            else
               echo "WARNING: $uname has no key ($keyName not found)!"
            fi
            ../User-Setup add "--user=$uname" "--password=$passwd" "--site=$ORGANISATION" "--firstname=$gname" "--lastname=$fname" --user "$publicKeyArg"
            userArgs="$userArgs --user=$uname"

         elif [ "$1" = "remove" ] ; then
            echo -e "\x1b[34mRemoving $uname ($gname $fname) ...\x1b[0m"
            ../User-Setup remove "--user=$uname"
         fi
      fi
   done

   if [ "$action" = "add" ] ; then
      echo -e "\x1b[34mAdding slice $SLICE ...\x1b[0m"
      echo $userArgs | xargs ../Slice-Setup add "--name=$SLICE" --own-addresses "--description=$SLICEDESC" --maxnodespersite=999999
   elif [ "$1" = "remove" ] ; then
      echo -e "\x1b[34mRemoving slice $SLICE ...\x1b[0m"
      ../Slice-Setup remove "--name=$SLICE"
   fi

) <$ACCOUNTS
