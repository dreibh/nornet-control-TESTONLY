MAKE_CROPPED=../image-resize-with-cropping

if [ $# -lt 2 ] ; then
   echo >&2 "Usage: $0 [--format=A4|A3] output_file input_file [input_file [...]]"
   exit 1
fi


# ====== Set format =========================================================
while [ $# -gt 1 ] ; do
   if [[ $1 =~ ^-- ]] ; then
      if [ "$1" == "--format=A3" ] ; then
         # DIN A3: 420 mm × 297 mm
         WIDTH=4200
         HEIGHT=2970
      elif [ "$1" == "--format=A4" ] ; then
         # DIN A4: 297 mm × 210 mm
         WIDTH=2970
         HEIGHT=2100
      fi
      shift
      continue
   fi
   break
done



# ====== Convert and crop input files =======================================
outputFile="$1"
tempDirectory=`mktemp -d -t tmp.XXXXXXXXXX`
inputPages=""

page=1
while [ $# -gt 1 ] ; do
   shift
   inputFile="$1"
   tempFile="$tempDirectory/${page}.png"

   ${MAKE_CROPPED} "$inputFile" $tempFile A4

   inputPages="$inputPages $tempFile"
   let page=$page+1
done


# ====== Write output file ==================================================
echo "Format: ${WIDTH}x${HEIGHT}"
convert \
 -units PixelsPerCentimeter -density 100x100 -page ${WIDTH}x${HEIGHT} -resize ${WIDTH}x${HEIGHT} \
 -gravity center \
 -compress lossless \
 $inputPages \
 "$outputFile"
identify "$outputFile"

rm -rf "$tempDirectory"
