if [ $# -lt 2 ] ; then
   echo >&2 "Usage: $0 output_file input_file [input_file [...]]"
   exit 1
fi


outputFile="$1"
tempDirectory=`mktemp -d -t tmp.XXXXXXXXXX`
inputPages=""

page=1
while [ $# -gt 1 ] ; do
   shift
   inputFile="$1"
   tempFile="$tempDirectory/${page}.png"
   
   echo "C=$inputFile $tempFile"
   ../image-resize-with-cropping "$inputFile" $tempFile A4

   inputPages="$inputPages $tempFile"
   let page=$page+1
done

echo "$inputPages"


# DIN A4: 210 mm Ã— 297 mm
WIDTH=2970
HEIGHT=2100

convert \
 -units PixelsPerCentimeter -density 100x100 -page ${WIDTH}x${HEIGHT} -resize ${WIDTH}x${HEIGHT} \
 -gravity center \
 -compress lossless \
 $inputPages \
 "$outputFile"
identify "$outputFile"

rm -rf "$tempDirectory"
