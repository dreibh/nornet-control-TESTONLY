# ###### Exit with usage information ########################################
exit_with_usage ()
{
   /bin/echo >&2 "Usage: $0 interface pre-up|up|post-up|pre-down|down|post-down ipv4|ipv6 [address/prefix gateway metric] ..."
   exit 1
}


# ###### Write log information ##############################################
log ()
{
   /bin/echo -e "\x1b[1;34m`date +%FT%H:%M:%S`: $@\x1b[0m"
}


# ###########################################################################
# #### Main Program                                                      ####
# ###########################################################################

# ====== Handle arguments ===================================================
if [ $# -lt 3 ] ; then
   exit_with_usage
fi

logFile=/dev/stdout
interface="$1"
state="$2"
type="$3"
if [ "$type" != "ipv4" -a "$type" != "ipv6" ] ; then
   exit_with_usage
fi

if [ "$state" = "pre-up" ] ; then
   (
      log "Pre-Up of interface $interface"
      if [ "$type" == "ipv6" ] ; then
         /sbin/sysctl -q -e -w net.ipv6.conf.$interface.use_tempaddr=0 net.ipv6.conf.$interface.accept_ra=0 net.ipv6.conf.$interface.autoconf=0 || true
      fi
      /sbin/ip link set up promisc on dev "$interface" || true
   ) >>$logFile 2>&1

elif [ "$state" = "post-up" ] ; then
   (
      log "Post-Up of interface $interface"
      if [ "$type" == "ipv4" ] ; then
         ip -4 addr show dev "$interface"
      else
         ip -6 addr show dev "$interface"
      fi
   )

elif [ "$state" = "post-down" ] ; then
   (
      log "Post-Down of interface $interface"
      /sbin/ip link set down promisc off dev "$interface" || true
   ) >>$logFile 2>&1

elif [ "$state" = "up" ] ; then
   if [ $# -lt 2 ] ; then
      exit_with_usage
   fi
   shift ; shift ; shift

   (
      log "Up of interface $interface"

      while [ "$3" != "" ] ; do
         address="$1"
         gateway="$2"
         metric="$3"
         shift ; shift ; shift
         /bin/echo "Adding $address via $gateway metric $metric ..."
         /sbin/ip addr add "$address" dev "$interface" || /bin/echo "ERROR: Failed to add address"
         /sbin/ip route add default via "$gateway" dev "$interface" metric "$metric" || /bin/echo "ERROR: Failed to add route"
      done

   ) >>$logFile 2>&1

elif [ "$state" = "down" ] ; then
   if [ $# -lt 2 ] ; then
      exit_with_usage
   fi
   shift ; shift ; shift

   (
      log "Down of interface $interface"

      while [ "$3" != "" ] ; do
         address="$1"
         gateway="$2"
         metric="$3"
         shift ; shift ; shift
         /bin/echo "Removing $address via $gateway metric $metric ..."
         /sbin/ip route del default via "$gateway" dev "$interface" metric "$metric" || /bin/echo "ERROR: Failed to remove route"
         /sbin/ip addr del "$address" dev "$interface" || /bin/echo "ERROR: Failed to remove address"
      done

   ) >>$logFile 2>&1

else
   exit_with_usage

fi
