# # ====== Version check ====================================
# echo "Kernel Version  `make kernelversion`"
# echo "Kernel Release: `make kernelrelease`"
# if [ "`make kernelrelease`" != "`make kernelversion`" ] ; then
#    echo >&2 "ERROR: Versioning issues - packaging will not work properly!"
