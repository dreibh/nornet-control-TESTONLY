#!/bin/sh

set -e

case "$1" in
   configure)
      Auto-Update-Keys
      if [ -e /etc/update-motd.d ] ; then
         ln -sf /usr/bin/System-Info /etc/update-motd.d/55-nornet-management
      fi
      if [ -e /usr/sbin/update-motd ] ; then
         /usr/sbin/update-motd 2>/dev/null || true
      fi
      update-grub || true
      ;;
esac

#DEBHELPER#

exit 0
